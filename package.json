{
  "name": "indok-api",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "description": "api for indok-web",
  "repository": "https://github.com/rubberdok/indok-web",
  "author": "Rubberd√∏k NTNU",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "setup": "run-p generate",
    "build:production": "run-s setup swc",
    "build": "swc",
    "studio": "prisma studio",
    "db:migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "db:migrate:status": "prisma migrate status",
    "db:migrate": "prisma migrate deploy",
    "db:push": "dotenv -e .env.development -- prisma db push",
    "db:seed": "dotenv -e .env.development -- node dist/repositories/seed.js",
    "dev": "concurrently --restart-tries 3 -n server,transpile,graphql,prisma --kill-signal -c cyan.bold,black.dim,magenta.dim,black.dim 'dotenv -e .env.development -- nodemon --delay 250ms --watch .env --watch dist' 'pnpm:swc --watch' \"pnpm:generate:gql --watch 'src/graphql/**/type-defs.ts'\" 'pnpm:generate:prisma --watch'",
    "docker:up": "docker compose up postgres redis -d",
    "generate:gql": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' graphql-codegen-esm -c codegen.config.cjs",
    "generate:prisma": "prisma generate",
    "generate": "run-p generate:*",
    "integration-test": "dotenv -e .env.test -- pnpm db:push && dotenv -e .env.test -- node --experimental-vm-modules --no-warnings=ExperimentalWarning ./node_modules/jest/bin/jest.js --config jest.integration.config.cjs",
    "lint:fix": "pnpm lint  --fix",
    "lint": "eslint .",
    "lint:ci": "run-s setup 'lint {@}' --",
    "setup-integration-test": "run-s docker:up && wait-on tcp:5433 -t 20000",
    "swc": "swc src -d dist",
    "test:integration:ci": "run-s setup 'integration-test {@}' --",
    "test:integration": "pnpm setup-integration-test && pnpm integration-test",
    "test": "dotenv -e .env.test -- node --experimental-vm-modules --no-warnings=ExperimentalWarning ./node_modules/jest/bin/jest.js",
    "test:ci": "pnpm run setup && dotenv -e .env.test --  node --experimental-vm-modules --no-warnings=ExperimentalWarning ./node_modules/jest/bin/jest.js",
    "tsc": "tsc",
    "tsc:ci": "run-s setup tsc",
    "check": "run-s setup tsc lint test"
  },
  "optionalDependencies": {
    "@swc/core-linux-x64-musl": "^1.3.99"
  },
  "devDependencies": {
    "@eddeee888/gcg-typescript-resolver-files": "^0.7.1",
    "@faker-js/faker": "^8.3.1",
    "@graphql-codegen/add": "^5.0.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@graphql-codegen/schema-ast": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@graphql-eslint/eslint-plugin": "^3.20.1",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@jest/globals": "^29.7.0",
    "@parcel/watcher": "^2.3.0",
    "@swc/cli": "^0.1.63",
    "@swc/core": "1.3.99",
    "@swc/helpers": "^0.5.3",
    "@swc/jest": "^0.2.29",
    "@types/connect-redis": "^0.0.23",
    "@types/jest": "^29.5.10",
    "@types/lodash-es": "^4.17.12",
    "@types/luxon": "^3.3.5",
    "@types/node": "18",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "pino-pretty": "^10.2.3",
    "ts-node": "11.0.0-beta.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@apollo/server": "^4.9.5",
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/cookie": "^9.2.0",
    "@fastify/cors": "^8.4.1",
    "@fastify/helmet": "^11.1.1",
    "@fastify/session": "^10.5.0",
    "@graphql-tools/merge": "^9.0.1",
    "@immobiliarelabs/fastify-sentry": "^7.1.1",
    "@prisma/client": "^5.6.0",
    "@sentry/node": "^7.81.0",
    "body-parser": "^1.20.2",
    "connect-redis": "^7.1.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "execa": "^8.0.1",
    "fastify": "^4.24.3",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "graphql-tag": "^2.12.6",
    "lodash-es": "^4.17.21",
    "luxon": "^3.4.4",
    "node-fetch": "^3.3.2",
    "postmark": "^3.11.0",
    "prisma": "^5.6.0",
    "redis": "^4.6.11",
    "yargs": "^17.7.2",
    "zod": "^3.22.4"
  }
}
