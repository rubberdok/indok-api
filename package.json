{
	"name": "indok-api",
	"version": "1.0.0",
	"description": "api for indok-web",
	"repository": "https://github.com/rubberdok/indok-web",
	"author": "Rubberd√∏k NTNU",
	"license": "MIT",
	"private": true,
	"type": "module",
	"scripts": {
		"setup": "run-p generate",
		"build:production": "run-s clean-dist setup swc",
		"build": "pnpm run swc",
		"studio": "prisma studio",
		"db:migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
		"db:migrate:status": "prisma migrate status",
		"db:migrate": "prisma migrate deploy",
		"db:push": "dotenv -e .env.development -- prisma db push",
		"db:seed": "dotenv -e .env.development -- node dist/repositories/seed.js",
		"dev": "concurrently --restart-tries 3 -n server,worker,transpile,graphql,prisma --kill-signal -c cyan.bold,cyan.dim,black.dim,magenta.dim,black.dim 'dotenv -e .env.development -- nodemon ./dist/server.js --delay 250ms --watch .env --watch dist' 'dotenv -e .env.worker.development -- nodemon ./dist/worker.js --delay 250ms --watch .env --watch dist' 'pnpm:swc --watch' \"pnpm:generate:gql --watch 'src/graphql/**/type-defs.ts'\" 'pnpm:generate:prisma --watch'",
		"docker:up": "docker compose up postgres redis -d",
		"generate:gql": "NODE_OPTIONS='--loader ts-node/esm --no-warnings' graphql-codegen-esm -c codegen.config.cjs",
		"generate:prisma": "prisma generate",
		"generate": "run-p generate:*",
		"integration-test": "dotenv -e .env.test -- pnpm db:push && dotenv -e .env.test -- node --experimental-vm-modules --no-warnings=ExperimentalWarning ./node_modules/jest/bin/jest.js --config jest.integration.config.cjs",
		"format": "biome format src",
		"format:write": "biome format --write src",
		"lint": "biome check src",
		"lint:apply": "biome check --apply src",
		"biome:ci": "biome ci src",
		"lint:ci": "run-s setup biome:ci",
		"setup-integration-test": "run-s docker:up && wait-on tcp:5433 -t 20000",
		"swc": "swc src -d dist --log-watch-compilation --strip-leading-paths",
		"test:integration:ci": "run-s setup 'integration-test {@}' --",
		"test:integration": "pnpm setup-integration-test && pnpm integration-test",
		"test": "dotenv -e .env.test -- node --experimental-vm-modules --no-warnings=ExperimentalWarning ./node_modules/jest/bin/jest.js",
		"test:ci": "pnpm run setup && dotenv -e .env.test --  node --experimental-vm-modules --no-warnings=ExperimentalWarning ./node_modules/jest/bin/jest.js",
		"tsc": "tsc",
		"tsc:ci": "run-s setup tsc",
		"check": "run-s setup tsc lint test",
		"clean-dist": "rm -rf dist"
	},
	"devDependencies": {
		"@biomejs/biome": "1.5.3",
		"@eddeee888/gcg-typescript-resolver-files": "^0.7.2",
		"@faker-js/faker": "^8.4.1",
		"@graphql-codegen/add": "^5.0.2",
		"@graphql-codegen/cli": "^5.0.2",
		"@graphql-codegen/client-preset": "^4.2.2",
		"@graphql-codegen/schema-ast": "^4.0.2",
		"@graphql-codegen/typescript": "^4.0.4",
		"@graphql-codegen/typescript-resolvers": "^4.0.4",
		"@graphql-typed-document-node/core": "^3.2.0",
		"@jest/globals": "^29.7.0",
		"@parcel/watcher": "^2.4.0",
		"@swc/cli": "^0.3.9",
		"@swc/core": "1.4.2",
		"@swc/helpers": "^0.5.6",
		"@swc/jest": "^0.2.36",
		"@types/connect-redis": "^0.0.23",
		"@types/jest": "^29.5.12",
		"@types/lodash-es": "^4.17.12",
		"@types/luxon": "^3.4.2",
		"@types/node": "^20.11.19",
		"concurrently": "^8.2.2",
		"dotenv-cli": "^7.3.0",
		"jest": "^29.7.0",
		"jest-mock-extended": "^3.0.5",
		"nodemon": "^3.0.3",
		"npm-run-all": "^4.1.5",
		"pino-pretty": "^10.3.1",
		"ts-node": "11.0.0-beta.1",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3",
		"wait-on": "^7.2.0"
	},
	"dependencies": {
		"@apollo/server": "^4.10.0",
		"@as-integrations/fastify": "^2.1.1",
		"@fastify/cookie": "^9.3.1",
		"@fastify/cors": "^9.0.1",
		"@fastify/helmet": "^11.1.1",
		"@fastify/rate-limit": "^9.1.0",
		"@fastify/redis": "^6.1.1",
		"@fastify/session": "^10.7.0",
		"@fastify/under-pressure": "^8.3.0",
		"@graphql-tools/merge": "^9.0.1",
		"@immobiliarelabs/fastify-sentry": "^8.0.0",
		"@prisma/client": "^5.9.1",
		"@sentry/node": "^7.101.1",
		"@sentry/tracing": "7.101.1",
		"@vippsmobilepay/sdk": "^1.2.0",
		"avvio": "^8.3.0",
		"body-parser": "^1.20.2",
		"bullmq": "^5.2.1",
		"connect-redis": "^7.1.1",
		"dayjs": "^1.11.10",
		"dotenv": "^16.4.4",
		"fastify": "^4.26.1",
		"fastify-plugin": "^4.5.1",
		"graphql": "^16.8.1",
		"graphql-scalars": "^1.22.4",
		"graphql-tag": "^2.12.6",
		"ioredis": "^5.3.2",
		"lodash-es": "^4.17.21",
		"luxon": "^3.4.4",
		"openid-client": "^5.6.4",
		"pino": "^8.19.0",
		"postmark": "^4.0.2",
		"prisma": "^5.9.1",
		"yargs": "^17.7.2",
		"zod": "^3.22.4"
	},
	"pnpm": {
		"supportedArchitectures": {
			"os": ["current", "linux"],
			"cpu": ["current", "x64"],
			"libc": ["current", "glibc"]
		}
	}
}
