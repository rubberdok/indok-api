{
  "name": "indok-api",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "description": "api for indok-web",
  "repository": "https://github.com/rubberdok/indok-web",
  "author": "Rubberd√∏k NTNU",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "build:production": "run-p generate:prisma swc",
    "build": "run-p generate:prisma swc",
    "generate": "run-p generate:*",
    "generate:prisma": "prisma generate",
    "generate:gql": "NODE_OPTIONS=\"--loader ts-node/esm\" graphql-codegen-esm --config codegen.config.cjs",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "dev": "concurrently --restart-tries 3 -n server,transpile,graphql,prisma -k -c cyan.bold,black.dim,magenta.dim,black.dim \"dotenv -e .env.development -- nodemon --delay 250ms --watch .env --watch dist\" \"npm:swc -- --watch\" \"npm:generate:gql -- --watch 'src/graphql/**/type-defs.ts'\" \"npm:generate:prisma -- --watch\"",
    "db:push": "dotenv -e .env.development -- prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "db:seed": "dotenv -e .env.development -- ts-node --transpile-only src/repositories/seed.ts",
    "test": "dotenv -e .env.test -- node --experimental-vm-modules ./node_modules/jest/bin/jest.js",
    "test:coverage": "jest --collect-coverage",
    "docker:up": "docker compose up postgres redis -d",
    "integration-test": "dotenv -e .env.test -- npm run db:push && dotenv -e .env.test -- jest --config jest.integration.config.cjs",
    "pretest:integration": "run-s docker:up && wait-on tcp:5433 -t 20000",
    "test:integration": "npm run integration-test --",
    "test:integration:headless": "npm run integration-test --",
    "tsc": "npm run generate && tsc",
    "swc": "swc src -d dist"
  },
  "optionalDependencies": {
    "@swc/core-linux-x64-musl": "^1.3.93"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.2.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/schema-ast": "^4.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-resolvers": "^4.0.1",
    "@graphql-eslint/eslint-plugin": "^3.20.1",
    "@jest/globals": "^29.7.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "1.3.82",
    "@swc/helpers": "^0.5.3",
    "@swc/jest": "^0.2.29",
    "@types/connect-redis": "^0.0.22",
    "@types/jest": "^29.5.6",
    "@types/lodash": "^4.14.200",
    "@types/node": "18",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "concurrently": "^8.2.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "nodemon": "^3.0.1",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2",
    "wait-on": "^7.0.1"
  },
  "dependencies": {
    "@apollo/server": "^4.9.4",
    "@as-integrations/fastify": "^2.1.1",
    "@fastify/cookie": "^9.1.0",
    "@fastify/cors": "^8.4.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/session": "^10.5.0",
    "@graphql-tools/merge": "^9.0.0",
    "@immobiliarelabs/fastify-sentry": "^7.1.1",
    "@prisma/client": "^5.4.2",
    "@sentry/node": "^7.74.1",
    "body-parser": "^1.20.2",
    "connect-redis": "^7.1.0",
    "dayjs": "^1.11.10",
    "dotenv": "^16.3.1",
    "fastify": "^4.24.2",
    "graphql": "^16.8.1",
    "graphql-scalars": "^1.22.4",
    "graphql-tag": "^2.12.6",
    "lodash": "^4.17.21",
    "node-fetch": "^3.3.2",
    "postmark": "^3.1.1",
    "redis": "^4.6.10",
    "zod": "^3.22.4"
  }
}
