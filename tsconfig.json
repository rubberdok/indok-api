{
  "extends": "ts-node/node16/tsconfig.json",

  "ts-node": {
    "swc": true,
    "esm": true,
    "require": ["tsconfig-paths/register"]
  },

  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "sourceMap": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "lib": ["ES2022"],
    "strict": true,
    "rootDir": ".",
    "types": ["./node_modules/.prisma/client", "node"],
    "outDir": "dist",
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": "."
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
