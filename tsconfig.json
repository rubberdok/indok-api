{
  "ts-node": {
    "swc": true,
    "esm": true,
    "require": ["tsconfig-paths/register"]
  },

  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "sourceMap": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "lib": ["ES2022"],
    "strict": true,
    "rootDir": "./",
    "types": ["node"],
    "outDir": "dist",
    "noEmit": true,
    "paths": {
      "~/*": ["src/*"]
    },
    "baseUrl": "./"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
