{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"vcs": {
		"enabled": true,
		"useIgnoreFile": true,
		"clientKind": "git"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"useAwait": "warn"
			},
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noUnusedPrivateClassMembers": "error"
			},
			"nursery": {
				"recommended": true
			}
		}
	},
	"files": {
		"ignore": [
			"node_modules",
			"dist",
			"pnpm-lock.yaml",
			"src/graphql/test-clients/integration/**/*.ts",
			"src/graphql/test-clients/unit/**/*.ts",
			"*.generated.ts"
		]
	}
}
