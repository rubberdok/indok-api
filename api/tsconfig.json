{
  "extends": "ts-node/node16/tsconfig.json",

  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["ES2020"],
    "strict": true,
    "rootDir": ".",
    "types": ["reflect-metadata", "./node_modules/.prisma/client"],
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"]
}
