{
  "extends": "ts-node/node16/tsconfig.json",

  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "strict": true,
    "rootDir": ".",
    "types": ["reflect-metadata"],
    "outDir": "dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"]
}
