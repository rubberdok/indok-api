{
  "name": "indok-api",
  "version": "1.0.0",
  "description": "api for indok-web",
  "main": "index.ts",
  "repository": "https://github.com/rubberdok/indok-web",
  "author": "Rubberd√∏k NTNU",
  "license": "MIT",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "dotenv -e .env.development -- ts-node-dev --no-notify --transpile-only --respawn src",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "seed": "ts-node --transpile-only src/repository/seed.ts",
    "test": "dotenv -e .env.test -- jest",
    "test:coverage": "jest --collect-coverage",
    "docker:up": "docker compose up integration-tests -d",
    "docker:down": "docker compose stop integration-tests && docker compose rm integration-tests -v -f",
    "test:integration": "yarn docker:up && dotenv -e .env.test yarn migrate && dotenv -e .env.test -- jest --config jest.integration.config.ts",
    "posttest:integration": "yarn docker:down"
  },
  "devDependencies": {
    "@types/graphql-iso-date": "^3.4.0",
    "@types/jest": "^28.1.4",
    "@types/node": "^18.0.0",
    "jest": "^28.1.2",
    "jest-mock-extended": "^2.0.6",
    "prisma": "^4.0.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@prisma/client": "^4.0.0",
    "@sentry/node": "^7.5.1",
    "apollo-server-core": "^3.9.0",
    "apollo-server-express": "^3.9.0",
    "dayjs": "^1.11.3",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.1",
    "express-openid-connect": "^2.7.3",
    "graphql": "^16.5.0",
    "graphql-iso-date": "^3.6.1",
    "nexus": "^1.3.0",
    "zod": "^3.17.3"
  }
}
