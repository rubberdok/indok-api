{
  "name": "indok-api",
  "version": "1.0.0",
  "description": "api for indok-web",
  "main": "index.ts",
  "repository": "https://github.com/rubberdok/indok-web",
  "author": "Rubberd√∏k NTNU",
  "license": "MIT",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "ts-node src/index.ts",
    "dev": "concurrently \"dotenv -e .env.development -- ts-node-dev --no-notify --transpile-only --respawn src\" \"npm run generate -- --watch\"",
    "generate": "graphql-codegen --config src/graphql/codegen.yml",
    "db:push": "dotenv -e .env.development -- prisma db push",
    "migrate": "prisma migrate deploy",
    "migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "seed": "dotenv -e .env.development -- ts-node --transpile-only src/repositories/seed.ts",
    "test": "dotenv -e .env.test -- jest",
    "test:coverage": "jest --collect-coverage",
    "docker:up": "docker compose up integration-tests -d",
    "docker:down": "docker compose stop integration-tests && docker compose rm integration-tests -v -f",
    "test:integration": "npm run docker:up && dotenv -e .env.test npm run migrate && dotenv -e .env.test -- jest --config jest.integration.config.ts",
    "posttest:integration": "npm run docker:down"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.8.1",
    "@graphql-codegen/typescript": "^2.7.1",
    "@graphql-codegen/typescript-resolvers": "^2.7.1",
    "@types/cors": "^2.8.12",
    "@types/jest": "^28.1.4",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "concurrently": "^7.2.2",
    "jest": "^28.1.2",
    "jest-mock-extended": "^2.0.6",
    "prisma": "^4.0.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "@apollo/server": "^4.0.0-alpha.1",
    "@graphql-tools/merge": "^8.3.1",
    "@prisma/client": "^4.0.0",
    "@sentry/node": "^7.5.1",
    "body-parser": "^1.20.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.3",
    "dotenv": "^16.0.1",
    "dotenv-cli": "^6.0.0",
    "express": "^4.18.1",
    "express-openid-connect": "^2.7.3",
    "graphql": "^16.5.0",
    "graphql-scalars": "^1.17.0",
    "graphql-tag": "^2.12.6",
    "inversify": "^6.0.1",
    "lodash": "^4.17.21",
    "postmark": "^3.0.12",
    "reflect-metadata": "^0.1.13",
    "zod": "^3.17.3"
  }
}
