{
  "name": "indok-api",
  "version": "1.0.0",
  "description": "api for indok-web",
  "main": "index.ts",
  "repository": "https://github.com/rubberdok/indok-web",
  "author": "Rubberd√∏k NTNU",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm run tsc && swc src -d dist",
    "generate": "run-p generate:*",
    "generate:prisma": "prisma generate",
    "generate:gql": "graphql-codegen --config codegen.config.ts",
    "lint": "eslint .",
    "lint:fix": "npm run lint -- --fix",
    "dev": "concurrently --restart-tries 3 -n server,graphql,prisma -k -c cyan.bold,magenta.dim,black.dim \"dotenv -e .env.development -- nodemon --watch src src/index.ts\" \"npm:generate:gql -- --watch\" \"npm:generate:prisma -- --watch\"",
    "db:push": "dotenv -e .env.development -- prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "db:seed": "dotenv -e .env.development -- ts-node --transpile-only src/repositories/seed.ts",
    "test": "dotenv -e .env.test -- jest",
    "test:coverage": "jest --collect-coverage",
    "docker:up": "docker compose -f docker-compose.integration.yml up integration-tests -d",
    "docker:down": "docker compose stop integration-tests && docker compose rm integration-tests -v -f",
    "integration-test": "dotenv -e .env.test -- npm run db:push && dotenv -e .env.test -- jest --config jest.integration.config.ts",
    "pretest:integration": "run-s docker:down docker:up && wait-on tcp:5433 -t 20000",
    "test:integration": "npm run integration-test --",
    "posttest:integration": "npm run docker:down",
    "test:integration:headless": "npm run integration-test --",
    "tsc": "tsc"
  },
  "optionalDependencies": {
    "@swc/core-linux-x64-musl": "^1.3.11"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "@graphql-codegen/cli": "^2.13.7",
    "@graphql-codegen/schema-ast": "^2.5.1",
    "@graphql-codegen/typescript": "^2.7.3",
    "@graphql-codegen/typescript-resolvers": "^2.7.5",
    "@graphql-eslint/eslint-plugin": "^3.12.0",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.10",
    "@swc/helpers": "^0.4.12",
    "@swc/jest": "^0.2.23",
    "@types/connect-redis": "^0.0.19",
    "@types/cors": "^2.8.12",
    "@types/crypto-js": "^4.1.1",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^28.1.4",
    "@types/lodash": "^4.14.186",
    "@types/node": "^18.11.6",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.40.0",
    "concurrently": "^7.4.0",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.5.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.2",
    "jest-mock-extended": "^3.0.1",
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.4.0",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.4",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "@apollo/server": "^4.0.3",
    "@graphql-tools/merge": "^8.3.6",
    "@prisma/client": "^4.4.0",
    "@sentry/node": "^7.15.0",
    "body-parser": "^1.20.1",
    "connect-redis": "^6.1.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "graphql": "^16.6.0",
    "graphql-scalars": "^1.19.0",
    "graphql-tag": "^2.12.6",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.7",
    "postmark": "^3.0.14",
    "redis": "^4.3.1",
    "reflect-metadata": "^0.1.13",
    "tsyringe": "^4.7.0",
    "zod": "^3.19.1"
  }
}
