{
  "name": "indok-api",
  "version": "1.0.0",
  "description": "api for indok-web",
  "main": "index.ts",
  "repository": "https://github.com/rubberdok/indok-web",
  "author": "Rubberd√∏k NTNU",
  "license": "MIT",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "start": "ts-node src/index.ts",
    "generate:prisma": "prisma generate",
    "generate:gql": "graphql-codegen --config src/graphql/codegen.yml",
    "dev": "concurrently --restart-tries 3 -n server,graphql,prisma -k -c cyan.bold,magenta.dim,black.dim \"dotenv -e .env.development -- nodemon --watch src src/index.ts\" \"npm run generate:gql -- --watch\" \"npm run generate:prisma -- --watch\"",
    "db:push": "dotenv -e .env.development -- prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "dotenv -e .env.development -- prisma migrate dev",
    "db:seed": "dotenv -e .env.development -- ts-node --transpile-only src/repositories/seed.ts",
    "test": "dotenv -e .env.test -- jest",
    "test:coverage": "jest --collect-coverage",
    "docker:up": "docker compose up integration-tests -d",
    "docker:down": "docker compose stop integration-tests && docker compose rm integration-tests -v -f",
    "pretest:integration": "run-s docker:down docker:up && wait-on tcp:5433 -t 20000",
    "test:integration": "dotenv -e .env.test -- run-s docker:up db:push && dotenv -e .env.test -- jest --config jest.integration.config.ts",
    "posttest:integration": "run-s docker:down",
    "tsc": "tsc"
  },
  "optionalDependencies": {
    "@swc/core-linux-x64-musl": "^1.2.224"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.8.1",
    "@graphql-codegen/typescript": "^2.7.1",
    "@graphql-codegen/typescript-resolvers": "^2.7.1",
    "@swc/core": "^1.2.224",
    "@swc/helpers": "^0.4.3",
    "@swc/jest": "^0.2.22",
    "@types/connect-redis": "^0.0.18",
    "@types/cors": "^2.8.12",
    "@types/crypto-js": "^4.1.1",
    "@types/express-session": "^1.17.5",
    "@types/jest": "^28.1.4",
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "concurrently": "^7.2.2",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.2",
    "jest-mock-extended": "^2.0.6",
    "nodemon": "^2.0.19",
    "npm-run-all": "^4.1.5",
    "prisma": "^4.2.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "@apollo/server": "^4.0.0-alpha.1",
    "@graphql-tools/merge": "^8.3.1",
    "@prisma/client": "^4.2.1",
    "@sentry/node": "^7.5.1",
    "body-parser": "^1.20.0",
    "connect-redis": "^6.1.3",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.11.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-session": "^1.17.3",
    "graphql": "^16.5.0",
    "graphql-scalars": "^1.17.0",
    "graphql-tag": "^2.12.6",
    "inversify": "^6.0.1",
    "lodash": "^4.17.21",
    "node-fetch": "^2.6.7",
    "postmark": "^3.0.12",
    "redis": "^4.2.0",
    "reflect-metadata": "^0.1.13",
    "zod": "^3.17.3"
  }
}
